<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <h4> From: <%=current_user.name %></h4>
    <h4> To: <%= @beer.user.name %></h4>
    <h4> Subject: <%= @beer.name %></h4>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4  %>
    </div>
    <%= f.hidden_field :recipients, :multiple => true, :value => [@beer.user.id] %>
    <%= f.hidden_field :subject, :value => @beer.name %>
    <h4><%= f.submit "Send Message", class: "btn btn-lg button-tan" %></h4>

<% end %>
