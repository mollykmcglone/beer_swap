<% if is_conversation %>
  <h4 class="center italic"> ~ This is a private conversation between you and <%= @beer.user.name %> ~</h4>
  <div class="row push-down-lite">
    <div class="col-md-4">
      <%= render :partial => '/beers/small_beer', locals: {:@beer => @beer, :@user => current_user } %>
    </div>
<% else %>
  <div class="row push-down-lite">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= render 'mailbox/folders' %>
        </div>
      </div>
    </div>
<% end %>

  <div class="col-md-8">
    <% if is_conversation %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= render 'conversations/form' %>
        </div>
      </div>
    <% else %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= render partial: 'conversations/conversation', collection: messages %>
        </div>
      </div>
    <% end %>
  </div>
</div>
