<div class="jumbotron">
  <div class="container push-space">
    <div class="jumbotron-text">
      <h1>Beer Swap Blog</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="col-sm-10 col-sm-offset-1">
    <ul>
      <% @posts.each do |post| %>
        <li>
          <h3><%= link_to post.title, post_path(post), :id => post.title %></h3>
          <h4>Posted <%= time_ago_in_words(post.created_at) %> ago in <%= post.category.name %> (<%= post.comments.length %> comments)</h4>
          <p><%= post.content %><p><hr>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-sm-2 col-sm-offset-5">
    <p><%= link_to "Create a New Post", new_post_path, :class => "btn btn-primary" %></p>
  </div>
</div>
