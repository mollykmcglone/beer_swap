<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1><%= @post.title %></h1>
      <h4>Posted <%= time_ago_in_words(@post.created_at) %> ago in <%= @post.category.name %> (<%= @post.comments.length %> comments)</h4>
      <div>
        <%= image_tag @post.image.url(:large) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-9 col-sm-offset-1">
      <br>
      <p><%= @post.content %><p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-9 col-sm-offset-1">
      <h4>Comments for: "<%= @post.title %>""</h4><br>
    </div>
  </div>
  <div class="row">
  <% if @post.comments.any? %>
    <ul>
      <% @post.comments.each do |comment| %>
      <li>
        <div class="well col-sm-8 col-sm-offset-1">
          <h5><span class="bold"><%= comment.user.name %></span> says:</h5>
          <h5>"<%= comment.content %>"</h5>
          <%= time_tag comment.created_at %><br>
          <%= link_to 'Edit Comment', edit_post_comment_path(@post, comment), :class => "btn btn-sm btn-success"  %>
          <%= link_to 'Delete Comment', post_comment_path(@post, comment), :data => {:confirm => "Are you sure?", :method => "delete"}, :class => "btn btn-sm btn-danger" %><br>
        </div>
      </li>
      <% end %>
    </ul>
  <% else %>
    <div class="col-sm-8 col-sm-offset-1">
      <p>No comments yet. Get the discussion started!</p>
    </div>
  <% end %>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-1">
      <%= link_to 'Add a Comment', new_post_comment_path(@post), :class => "btn btn-primary" %><hr>
      <% if current_user %>
        <% if current_user.admin %>
        <%= link_to 'Edit Post', edit_post_path(@post) %><br>
        <%= link_to 'Delete Post', post_path(@post), :data => {:confirm => "Are you sure?", :method => "delete"} %><br>
        <% end %>
      <% end %>

      <%= link_to "Return to blog", posts_path %>
    </div>
  </div>
</div>
