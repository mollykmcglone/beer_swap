<li>
  <div class="row well white-back">
    <div class="col-sm-10">
      <h4><span class="bold teal"><%= @beer.name %></span></h4>
      <p>"<%= @beer.description %>"</p>
      <p><%= @beer.style.name %> from <% if @beer.homebrew %>
      Homebrew!
      <% else %>
      <%=@beer.brewery_name %>
      <% end %> Brewed on: <%= @beer.brew_date %></p>
      <% if current_user %>
        <% if @user.id == current_user.id %>
          <%= link_to 'Edit', edit_user_beer_path(@user, @beer)%><br>
          <%= link_to 'Delete', user_beer_path(@user, @beer), :data => {:confirm => "Are you sure?", :method => "delete"}, remote: true %><br>
        <% end %>
      <% end %>
    </div>
  </div>
</li>
