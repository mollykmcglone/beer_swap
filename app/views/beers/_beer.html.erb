<li>
  <div class="row well beer-tile">
    <h4><span class="bold blue"><%= @beer.name %></span></h4>
    <p>"<%= @beer.description %>"</p>
    <p><%= @beer.style.name %> from <% if @beer.homebrew %>
    Homebrew!
    <% else %>
    <%=@beer.brewery_name %>
    <% end %> Brewed on: <%= @beer.brew_date %></p>
    <% if current_user %>
      <% if @user.id == current_user.id %>
        <%= link_to 'Edit', edit_profile_beer_path(@profile, @beer)%><br>
        <%= link_to 'Delete', profile_beer_path(@profile, @beer), :data => {:confirm => "Are you sure?", :method => "delete"}, remote: true %><br>
      <% end %>
    <% end %>
  </div>
</li>
