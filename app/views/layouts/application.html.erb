<!DOCTYPE html>
<html>
  <head>
    <title>BeerSwap</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:bold' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Vollkorn' rel='stylesheet' type='text/css'>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-6">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to image_tag("beer_swap_logo.png"), posts_path, class: "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-6">
          <ul class="nav navbar-nav">
            <li class="nav-item"><%= link_to "News", posts_path %></li>
            <% if current_user %>
              <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, :method => "delete" %></li>
              <li class="nav-item"><%= link_to "My Profile", profile_path(current_user.id) %></li>
              <li class="round-image-50"><%= image_tag(current_user.profile.avatar.url(:thumb)) %></li>
            <% else %>
              <li class="nav-item"><%= link_to "Login", new_user_session_path %></li>
              <li class="nav-item"><%= link_to "Join us!", new_user_registration_path %></li>
            <% end %>
         </ul>
        </div><!-- /.navbar-collapse -->
      </div>
    </nav>
      <div class="push-down container">
        <% if flash[:notice] %>
          <div class="alert alert-info push-down">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert alert-danger push-down">
            <%= flash[:alert] %>
          </div>
          <% end %>
      </div>

      <div class="push-down container">
        <%= yield %>
      </div>

      <footer class="footer">
        <div class="text-muted">
          <br><h5>&copy; 2016 Molly McGlone<h5>
        </div>
      </footer>
  </body>
</html>
