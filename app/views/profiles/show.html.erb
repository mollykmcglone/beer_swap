<div class="container">

  <h1>User Profile</h1>

  <div class="row">
    <div class="col-sm-4">
      <br>
      <div class="rounded">
        <%= image_tag(current_user.profile.avatar.url(:medium), class: "profile_avatar img-responsive") %>
      </div>
      <br>
      <%= form_for (@profile) do |f| %>
      <div class="form-group">
        <h4>Update your Avatar</h4>
        <%= f.file_field :avatar %>
      </div>
      <%= f.submit "Upload Image" %>
      <% end %>
      <br>
    </div>

    <div class="well col-sm-6 col-sm-offset-1">
      <h3>Account Information:</h3>
      <h4>Name: <%= current_user.name %></h4>
      <h4>Email: <%= current_user.email %></h4>
      <p> <%= link_to "Edit Account Info", edit_user_registration_path(current_user)  %></p>
    </div>

    <div class="well col-sm-6 col-sm-offset-1">
      <h3>Address:</h3>
      <h4>Street Address: <%= current_user.profile.address %></h4>
      <h4>City: <%= current_user.profile.city %></h4>
      <h4>State: <%= current_user.profile.state %></h4>
      <h4>Zip: <%= current_user.profile.zipcode%></h4>
      <p> <%= link_to "Edit Address", edit_profile_path(current_user)  %></p>
    </div>
  </div>
</div>
