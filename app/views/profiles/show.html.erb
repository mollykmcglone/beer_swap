<div class="container">
  <div class="col-sm-12 push-down">
    <h1 class="blue bold"><%= @user.name %></h1>
    <div class="row well white-back push-down-lite">
      <div class="col-sm-3">
        <div class="rounded-profile push-down-lite">
          <%= image_tag(@user.profile.avatar.url(:medium), class: "profile_avatar") %>
        </div>
        <% if current_user == @user %>
          <%= form_for(@profile, multipart: true) do |f| %>
          <div class="form-group">
            <h5>Update photo</h5>
            <%= f.file_field :avatar %>
          </div>
          <h5><%= f.submit "Upload Image", class: "btn btn-sm button-teal" %></h5>
          <% end %>
        <% end %>
        <br>
      </div>
      <div class="col-sm-8 col-sm-offset-1">
        <div class="col-sm-12">
          <h4 class="blue">About:</h4>
          <p><%= @profile.about %></p>
        </div>
        <div class="col-sm-12">
          <h4 class="blue">Favorite Beers:</h4>
          <p> <%= @profile.favorites %></p>
        </div>
        <div class="col-sm-6">
          <h4 class="blue">Homebrewer? </h4>
          <p><%= @profile.homebrewer %></p>
        </div>
        <div class="col-sm-6">
          <h4 class="blue">Kegerator?</h4>
          <p><%= @profile.kegerator %></p>
        </div>
        <div class="col-sm-6">
          <h4 class="blue">Member since: </h4>
          <p><%= time_tag @user.created_at %></p>
        </div>
        <div class="col-sm-6">
          <h4 class="blue">Shares: </h4>
          <p>Has shared <span id="shares"><%= @user.beers.count %></span> beers.</p>
        </div>
        <% if current_user == @user %>
        <div class="col-sm-6 push-down-lite">
          <h4><%= link_to "Update Profile", edit_profile_path(@profile), :class => "btn btn-lg btn-block button-tan" %></h4>
        </div>
        <div class="col-sm-6 push-down-lite">
          <h4><%= link_to "Account Settings", edit_user_registration_path(@user), :class => "btn btn-lg btn-block button-teal" %></h4>
        </div>
        <% end %>
      </div>
    </div>

    <div class="row push-down">
      <h2 class="blue indent">Currently sharing:</h2><br>
        <ul class="no-indent" id="beers">
          <% if @user.beers.any? %>
            <% @user.beers.each do |beer| %>
              <div class="col-sm-6">
                <%= render :partial => '/beers/beer', locals: {:@beer => beer, :@user => @user }%>
              </div>
            <% end %>
          <% else %>
            <br><p id="no_beers_msg" class="indent"><% if current_user %><% if @user.id === current_user.id %>You're not<% else %> <%= @user.name %> isn't <% end %><% end %> sharing any beers right now.</p><br>
          <% end %>
        </ul>
      </div>

    <div class="row push-down-lite bottom">
      <div class="col-sm-6 col-sm-offset-3">
        <% if current_user %>
          <% if @user.id == current_user.id %>
            <div>
              <h4><%= link_to "Post a new beer", new_user_beer_path(@user), remote: true, :class => "btn btn-lg btn-block button-tan", id: "new_beer_link" %></h4>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
